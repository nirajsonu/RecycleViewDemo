<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Multiple RecycleView Examples"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            >
        </TextView>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Simple Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/simple_recyleview_btn"
            >
        </Button>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Multiview Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiview_recyleview_btn"
            >
        </Button>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Search Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Search_recyleview_btn"
            >
        </Button>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Swip Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/swap_recyleview_btn"
            >
        </Button>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Drag Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/drag_recyleview_btn"
            >
        </Button>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Sort Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/sort_recyleview_btn"
            >
        </Button>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Filter Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/filter_recyleview_btn"
            >
        </Button>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Custom color Recycleview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/custom_color_recyleview_btn"
            >
        </Button>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>